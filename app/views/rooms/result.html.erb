<div class="container py-5 text-center">
  <h1 class="mb-4">ゲーム結果</h1>

  <div class="card mx-auto mb-4" style="max-width: 400px;">
    <div class="card-header fw-bold">
      合計スコア
    </div>
    <div class="card-body">
      <p class="display-4 fw-bold text-primary"><%= @total_score %>点</p>
    </div>
  </div>

  <div class="card mx-auto" style="max-width: 400px;">
    <div class="card-header fw-bold">
      単語履歴 (<%= @words.size %>個)
    </div>
    <div class="card-body" style="max-height: 400px; overflow-y: auto;">
      <% @words.each do |word| %>
        <div class="d-flex justify-content-between align-items-center mb-2">
          <p class="fs-5 mb-0"><%= word.body %></p>
          <% if word.score.to_i > 0 %>
            <span class="badge bg-info rounded-pill"><%= word.score %>点</span>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-4">
    <%= button_to "トップに戻る", root_path, method: :post, class: 'game-btn' %>
  </div>
</div>