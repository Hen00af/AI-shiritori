<div class="container py-5 text-center">
  <h1 class="mb-4">ゲーム結果</h1>

  <div class="card mx-auto mb-4" style="max-width: 400px;">
    <div class="card-header fw-bold">
      合計スコア
    </div>
    <div class="card-body">
      <h1> <% total_ai_score = @words.sum { |word| word.ai_score || 0 } %> </h1>
      <h1 class="red"><%= @total_score + total_ai_score %>点</h2>
      <h2>(基礎点: <%= @total_score %> + AIボーナス: <%= total_ai_score %>)</h2>
    </div>
  </div>

  <div class="card mx-auto" style="max-width: 400px;">
    <div class="card-header fw-bold">
      単語履歴 (<%= @words.count %>個)
    </div>
    <div class="card-body" style="max-height: 400px; overflow-y: auto;">
      <% @words.each do |word| %>
        <%= turbo_frame_tag "word_evaluation_#{word.id}" do %>
          <div class="d-flex justify-content-between align-items-center mb-2 border-bottom pb-2">
            <p class="fs-5 mb-0 text-start"><%= word.body %></p>
            <div class="text-end">
              <% if word.score.to_i > 0 %>
                <span class="badge bg-secondary rounded-pill">基礎: <%= word.score %>点</span>
              <% end %>
              <%# 【修正点】scoreが0の単語にはAI評価を表示しない %>
              <% if word.score.to_i > 0 %>
                <% if word.ai_score.present? %>
                  <span class="badge bg-info rounded-pill">AI: <%= word.ai_score %>点</span>
                <% else %>
                  <span class="badge bg-light text-dark rounded-pill">
                    <div class="spinner-border spinner-border-sm" role="status">
                      <span class="visually-hidden">Loading...</span>
                    </div>
                  </span>
                <% end %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="mt-4">
    <%= button_to "トップに戻る", authenticated_root_path, method: :get, class: 'game-btn' %>
  </div>
</div>